@model checkintegration.Models.Registration

@{
    ViewBag.Title = "AddServeyor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddServeyor</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Registeration Failed, fields.");
    <div>
        <h3>@ViewBag.Error</h3>
        <div class="container">
            <fieldset>

                @Html.HiddenFor(model => model.UserID)
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.FirstName, new { style = "font-size:20px" })
                            <div class="col-l-1">
                                @Html.TextBoxFor(model => model.FirstName, new { style = "width:300px;", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FirstName)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.LastName, new { style = "font-size:20px" })
                            <div class="col-l-1">
                                @Html.TextBoxFor(model => model.LastName, new { style = "width:300px;", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LastName)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName, new { style = "font-size:20px" })
                            <div class="col-l-1">
                                @Html.TextBoxFor(model => model.UserName, new { style = "width:300px;", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.UserName)

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.EmailId, new { style = "font-size:20px" })
                            <div class="col-l-1">
                                @Html.TextBoxFor(model => model.EmailId, new { style = "width:300px;" })
                                @Html.ValidationMessageFor(model => model.EmailId)

                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, new { style = "font-size:20px" })
                            <div class="col-l-1">
                                @Html.PasswordFor(model => model.Password, new { style = "width:300px;" })
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ConfirmPassword, new { style = "font-size:20px" })
                            <div class="col-l-1">
                                @Html.PasswordFor(model => model.ConfirmPassword, new { style = "width:300px;" })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Gender, new { style = "font-size:20px" })
                            <div class="col-l-1">
                                @Html.TextBoxFor(model => model.Gender, new { style = "width:300px;" })
                                @Html.ValidationMessageFor(model => model.Gender)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Address, new { style = "font-size:20px" })
                            <div class="col-l-1">
                                @Html.TextBoxFor(model => model.Address, new { style = "width:300px;" })
                                @Html.ValidationMessageFor(model => model.Address)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Pincode, new { style = "font-size:20px" })
                            <div class="col-l-1">
                                @Html.TextBoxFor(model => model.Pincode, new { style = "width:300px;" })
                                @Html.ValidationMessageFor(model => model.Pincode)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.PhoneNumber, new { style = "font-size:20px" })
                            <div class="col-l-1">
                                @Html.TextBoxFor(model => model.PhoneNumber, new { style = "width:300px;" })
                                @Html.ValidationMessageFor(model => model.PhoneNumber)
                            </div>
                        </div>
                    </div>
                </div>


                <div class="form-group">

                    <input type="submit" value="Register" class="btn btn-default" />

                </div>

            </fieldset>
        </div>
    </div>


}
