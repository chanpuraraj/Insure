@model checkintegration.Models.Sendmail


@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_MyLayout1.cshtml";
}

@using (Html.BeginForm())
{
   
<h2>Forgot Password</h2>
<div>
    <h6 style="color:#E91E63"> Enter your mail id. your password will be send there!!</h6>
</div>

<div class="container">

    <div class="form-group">
        Email Id:
        <div>
            @Html.TextBoxFor(model => model.To, new { style = "width:300px;", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.To)
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
</div>
}