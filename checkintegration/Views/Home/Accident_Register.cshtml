@model checkintegration.Models.AccidentInfo

@{
    ViewBag.Title = "Accident_Register";
    Layout = "~/Views/Shared/_CustomerLayouot.cshtml";
}



<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="pageTitle">Accident Register</h2>
            </div>
        </div>
    </div>
</section>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Registeration Failed, fields.");
    <div>
        <h3>@ViewBag.Error</h3>
        <div class="container">
            <fieldset>


                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Latitude, new { style = "font-size:20px" })
                            <div class="col-l-1">
                                @Html.TextBoxFor(model => model.Latitude, new { style = "width:300px;", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Latitude)
                            </div>
                        </div>
                    </div>
               </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Longitude, new { style = "font-size:20px" })
                            <div class="col-l-1">
                                @Html.TextBoxFor(model => model.Longitude, new { style = "width:300px;", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Longitude)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Description, new { style = "font-size:20px" })
                            <div class="col-l-1">
                                @Html.TextBoxFor(model => model.Description, new { style = "width:300px;", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Description)

                            </div>
                        </div>
                    </div>
             </div>
                    

                <div class="form-group">

                    <input type="submit" value="Register" class="btn btn-default" />

                </div>

            </fieldset>
        </div>
    </div>


}
